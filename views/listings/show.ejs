<%- layout("layouts/boilerplate") %>

<!-- Pass Mapbox token and listing data to client-side JavaScript -->
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <!-- Listing Title -->
      <h3 class="mb-4 text-center"><%= listing.title %></h3>

      <!-- Listing Card -->
      <div class="card show-card listing-card shadow-sm">

        <!-- Image Section -->
        <img
          src="<%= listing.image.url %>"
          class="card-img-top show-img"
          alt="<%= listing.image.filename %>"
        >

        <!-- Listing Details -->
        <div class="card-body">
          <p class="card-text mb-1">
            <strong>Owned By:</strong>
            <i><%= listing.owner.username %></i>
          </p>

          <p class="card-text"><%= listing.description %></p>

          <p class="card-text">
            <strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %><br>
            <strong>Location:</strong> <%= listing.location %><br>
            <strong>Country:</strong> <%= listing.country %>
          </p>
        </div>
      </div>

      <!-- Owner Edit/Delete Options -->
      <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-4">Edit</a>
          <form
            method="POST"
            action="/listings/<%= listing._id %>?_method=DELETE"
            class="m-0 col-4 text-end"
          >
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      <% } %>

      <!-- Review Section -->
      <div class="mt-4">
        <% if (currUser) { %>
          <hr>
          <h4>Leave a Review</h4>

          <!-- Review Form -->
          <form
            action="/listings/<%= listing._id %>/reviews"
            method="POST"
            class="needs-validation"
            novalidate
          >

            <!-- Rating Field (Star Selection) -->
            <div class="mb-3 mt-3">
              <label for="rating" class="form-label">Rating</label>
              <fieldset class="starability-slot">
                <input
                  type="radio"
                  id="no-rate"
                  class="input-no-rate"
                  name="review[rating]"
                  value="1"
                  checked
                  aria-label="No rating."
                />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>

                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>

                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>

                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>

                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>

            <!-- Comment Field -->
            <div class="mb-3 mt-3">
              <label for="comment" class="form-label">Comments</label>
              <textarea
                name="review[comment]"
                id="comment"
                cols="30"
                rows="5"
                class="form-control"
                required
              ></textarea>
              <div class="invalid-feedback">
                Please add some comments for the review.
              </div>
            </div>

            <!-- Submit Review -->
            <button class="btn btn-outline-dark">Submit</button>
          </form>
        <% } %>

        <hr>

        <!-- Show All Reviews -->
        <% if (listing.reviews.length > 0) { %>
          <div class="row">
            <h5 class="mt-4 mb-3">All Reviews</h5>
            <% for (review of listing.reviews) { %>
              <div class="card col-md-5 ms-3 mb-3 shadow-sm">
                <div class="card-body">
                  <h5 class="card-title mb-2">@<b><%= review.author.username %></b></h5>
                  <p
                    class="starability-result card-text"
                    data-rating="<%= review.rating %>"
                  ></p>
                  <p class="card-text mb-1"><%= review.comment %></p>
                </div>

                <!-- Allow owner or author to delete review -->
                <% if (
                  currUser &&
                  (listing.owner._id.equals(currUser._id) ||
                    review.author._id.equals(currUser._id))
                ) { %>
                  <form
                    method="POST"
                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                    class="mb-3 text-end"
                  >
                    <button class="btn btn-sm btn-dark">Delete</button>
                  </form>
                <% } %>
              </div>
            <% } %>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Map Display Section -->
  <div class="col-md-8 mb-3 mx-auto">
    <h3>Where you'll be</h3>
    <div id="map" class="map" style="width:100%; height:400px;"></div>
  </div>
</div>

<!-- Initialize Mapbox and Pass Listing Data -->
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<!-- External JS for Map Rendering -->
<script src="/js/map.js"></script>

<%- layout("layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <!-- Page Heading -->
      <h3 class="mb-4">Create a New Listing</h3>

      <!-- Form for Creating a New Listing -->
      <form 
        method="POST" 
        action="/listings" 
        novalidate 
        class="needs-validation" 
        enctype="multipart/form-data"
      >

        <!-- Title Field -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input 
            type="text" 
            class="form-control" 
            id="title"
            name="listing[title]" 
            placeholder="Add a catchy title" 
            required
          >
          <div class="valid-feedback">Title Looks Good!</div>
        </div>

        <!-- Description Field -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea 
            class="form-control" 
            id="description"
            name="listing[description]" 
            rows="3" 
            placeholder="Write something about your listing..." 
            required
          ></textarea>
          <div class="invalid-feedback">Please enter the short description</div>
        </div>

        <!-- Image Upload -->
        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input 
            type="file" 
            class="form-control" 
            id="image"
            name="listing[image]"
            required
          >
        </div>

        <!-- Price and Country Fields (same row) -->
        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="price" class="form-label">Price</label>
            <input  
              class="form-control" 
              id="price"
              name="listing[price]" 
              placeholder="1200"
              required
            >
            <div class="invalid-feedback">Price should be valid</div>
          </div>

          <div class="col-md-8 mb-3">
            <label for="country" class="form-label">Country</label>
            <input 
              type="text" 
              class="form-control" 
              id="country"
              name="listing[country]" 
              placeholder="India"
              required
            >
            <div class="invalid-feedback">Country Name should be valid</div>
          </div>
        </div>

        <!-- Location Field -->
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input 
            type="text" 
            class="form-control" 
            id="location"
            name="listing[location]" 
            placeholder="Jaipur, Rajasthan"
            required
          >
          <div class="invalid-feedback">Location should be valid</div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-dark mt-3">Add</button>

      </form>
    </div>
  </div>
</div>

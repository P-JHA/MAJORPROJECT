<!-- Inline CSS for Navbar Styling -->
<style>
  /* Search button base style */
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }

  /* Maintain same color on hover */
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  /* Add spacing between icon and text */
  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  /* Style for search input field */
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }
</style>

<!-- Navigation Bar Section -->
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- Brand logo that redirects to listings page -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <!-- Button for toggling navbar on smaller screens -->
    <button 
      class="navbar-toggler" 
      type="button" 
      data-bs-toggle="collapse" 
      data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar links and search bar container -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <!-- Left section: Navigation link -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Center section: Search bar -->
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input 
            class="form-control me-2 search-inp" 
            type="search" 
            placeholder="Search destinations"
          >
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <!-- Right section: User-related links -->
      <div class="navbar-nav ms-auto">
        <!-- Link to create a new listing (visible to everyone) -->
        <a class="nav-link" href="/listings/new">Airbnb your home</a>

        <!-- Safe check: Only show login/signup if currUser is undefined or not logged in -->
        <% if (typeof currUser === "undefined" || !currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link" href="/login"><b>Log In</b></a>
        <% } %>

        <!-- Safe check: Show logout if user is logged in -->
        <% if (typeof currUser !== "undefined" && currUser) { %>
          <a class="nav-link" href="/logout"><b>Log Out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
